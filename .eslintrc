{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "APP_ENV": "production",
    "DEVTOOLS": false
  },
  "rules": {
    "strict": [2, "global"],
    "max-len": [2, 80, 4],
    "comma-dangle": [2, "never"],
    "func-names": 0,
    "jsx-quotes": [2, "prefer-single"],
    "react/no-multi-comp": 0
  }
}
