{
  "extends": "standard",
  "parser": "babel-eslint",
  "plugins": ["flowtype", "react"],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-uses-vars": [2],
    "react/jsx-uses-react": [2],
    "comma-dangle": "off",
    "no-console": "warn",
    "semi": "off",
    "no-unused-expressions": "error",
    "no-unused-labels": "error",
    "no-unused-vars": "error",
    "no-undef": "error"
  },
  "globals": {
    "ReactClass": true,
    "history": true,
    "Generator": true,
    "SyntheticEvent": true,
    "KeyboardEvent": true,
    "EventHandler": true,
    "document": true,
    "window": true,
    "localStorage": true,
    "WebSocket": true
  }
}
